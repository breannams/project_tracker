
<div class="content">
<% projects.each do |project| %>
    
<ul>
   <li><h3 class="is-size-2">Title: <%= link_to(project.title, project) %></h3>
   <%if project.user != current_user%>
      <li>Created by: <%= project.user.username %> </li>

      <div style = "color: red" class = "collab">
      <h4><u><strong><%= collaborations project %></strong></u></h4>
      </div>
   <%end%>

   <ul>

      <%= render partial: 'categories/category', locals: {project: project}%>

      <li>Description: <%= project.description %></li>

      <li>Number of Entries: <%= project.entries.count%> </li>
      <li> <%= created_on project %> </li>
      <li> <%= last_updated project %> </li>

   </ul>
</ul>

      <% if project.user == current_user%>
         <button class="button is-primary is-small"><%= link_to "View this project", project_path(project) %></button>
         <button class="button is-primary is-small"><%= link_to "Edit this project", edit_project_path(project)%></button>
         <button class="button is-primary is-small"><%= link_to "Delete this Project", project, method: :delete, data: {confirm: 'Are you sure you want to delete this project?'} %></button>
      <% end %>
    
<% end %>
</div>