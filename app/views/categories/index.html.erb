<div class= "content">
<h1 class = "is-size-1">All categories! </h1>
<ul>
<% @categories.each do |category| %>
    <li><h2>Category: <%= link_to category.name, category_path(category) %> </h2></li>
        <ul>
       <strong> Project(s) in this category:</strong>
            <% category.projects.each do |project| %>
                <li><%= link_to project.title, project_path(project) %> </li>
            <%end%>
        </ul>
    <% end %>
</ul>
</div>