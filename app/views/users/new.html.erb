<h1 class = "is-size-1"> Sign up </h1>

<%= render partial: "layouts/errors", locals: {object: @user} %>

<div class= "is-size-3">
<%= form_for(@user, url: '/signup') do |f|%>

    <%= f.label :username %>
    <%= f.text_field :username %>
    <br>

    <%= f.label :password %>
    <%= f.password_field :password %>
    <br>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
    <br>

    <input class="button is-default is-primary" type="submit" value="Sign up">

<% end %>
</div>
